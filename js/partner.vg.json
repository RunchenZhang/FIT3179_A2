{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":  {
    "text":"Australian Export Partner Share",
    "align": "center"},
  "repeat": {"row": ["2000", "2005", "2010","2015","2019"]},
  "resolve": {
    "scale": {
      "color": "independent"}
  },
  "spec": {
    "width": 800,
    "height": 400,
    "data": {
      "url": "data/Partner-Timeseries.csv"
    },
    "transform": [
      {
        "lookup": "Partner Name",
        "from": {
          "data": {
            "url": "js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "key": "properties.NAME"
        },
        "as": "geo"
      }
    ],
    "projection": {"type": "equalEarth"},
    "mark": "geoshape",
    "encoding": {
      "shape": {
        "field": "geo",
        "type": "geojson"
      },
      "color": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "scale": {"domain": [0,1,2,5,10,20,25,35,40]}},
      "tooltip": [
        {"field": "Partner Name", "type": "nominal", "title": "Country"},
        {"field": {"repeat": "row"}}]
     
    }
  }
}