{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 750,
    "title": {"text":"Top 20 Partner Countries",
    "color":"#abc3e4",
    "fontStyle":"italic",
    "fontSize":18},
    "background":"#424966",
    "data": {
      "url": "data/top20-Partner.csv"
    },
    "params": [

      
      {
        "name": "Continent_selection",
        "bind": {
          "input": "radio",
          "options": [
            null,
            "Eurpoe",
            "North America",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Eurpoe",
            "North America",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      },
      {
        "name": "Year_selection",
        "bind": {
          "input": "radio",
          "options": [
            "2000","2001","2002","2003","2004","2005",
            "2006","2007","2008","2009","2010","2011",
            "2012","2013","2014","2015","2016","2017",
            "2018","2019"
          ],
          "labels": [
            "2000","2001","2002","2003","2004","2005",
            "2006","2007","2008","2009","2010","2011",
            "2012","2013","2014","2015","2016","2017",
            "2018","2019"
          ],
          "name": "Year Selection: "
        }
      }
    ],
    "transform": [

      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {
        "filter": " datum.Year == Year_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Import Value",
        "type": "quantitative",
        "title": "Import Value (US$ Thousand)",
        "axis": {"grid": false,"labels":false, "ticks": false, "titleColor":"#abc3e4"},
        "scale": {"type": "log", "domain": [90000, 90000000]}
      },
      "y": {
        "field": "Export Value",
        "type": "quantitative",
        "title": "Export Value (US$ Thousand)",
        "axis": {"grid": false,"labels": false, "ticks": false,"titleColor":"#abc3e4"},
        "scale": {"type": "log", "domain": [100000, 150000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Export Value",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [3000000, 10000000, 20000000, 40000000, 100000000],
              "range": [100,200,400, 800,1600]
            },
            "legend": {"format": ".1s", "titleColor":"#abc3e4", "labelColor":"#abc3e4"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Eurpoe",
                "North America",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#984ea3",
                "#f9c9a1",
                "#e41a1c",
                "#e09f68"
              ]
            },
            "legend": { "titleColor":"#abc3e4", "labelColor":"#abc3e4"}
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Export Value", "type": "quantitative", "format": ","},
            {"field": "Import Value", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -13,
          "fontSize": 12
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "#abc3e4"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Switzerland' ||datum['Country'] == 'Canada' ||datum['Country'] == 'Papua New Guinea' ||datum['Country'] == 'Netherlands' ||datum['Country'] == 'United Arab Emirates' ||datum['Country'] == 'Thailand' ||datum['Country'] == 'Germany' ||datum['Country'] == 'Philippines' ||datum['Country'] == 'Indonesia' ||datum['Country'] == 'Hong Kong, China' ||datum['Country'] == 'Japan'  ||datum['Country'] == 'Korea'  ||datum['Country'] == 'United States'  ||datum['Country'] == 'United Kingdom'||datum['Country'] == 'Singapore'  || datum['Country'] == 'Malaysia'  ||datum['Country'] == 'New Zealand'  ||  datum['Country'] == 'India'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Export Value", "type": "quantitative", "format": ","},
            {"field": "Import Value", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }