{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":700,
    "height": 400,
    "title": {"text":"Top 20 Partner Countries",
    "color":"black",
    "fontStyle":"italic",
    "fontSize":18},
    "background":"white",
    "data": {
      "url": "data/top20-Partner.csv"
    },
    "params": [

      
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Eurpoe",
            "North America",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Eurpoe",
            "North America",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      },
      {
        "name": "Year_selection",
        "value": 2000,
        "bind":
        {
          "input": "range",
          "min": 2000,
          "max": 2019,
          "step": 1,

          "name": "Year Selection: "
        }
      }
    ],
    "transform": [

      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {
        "filter": " datum.Year == Year_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Import Value",
        "type": "quantitative",
        "title": "Import Value (US$ Thousand)",
        "axis": {"grid": false,"labels":false, "ticks": false, "titleColor":"black"},
        "scale": {"type": "log", "domain": [90000, 90000000]}
      },
      "y": {
        "field": "Export Value",
        "type": "quantitative",
        "title": "Export Value (US$ Thousand)",
        "axis": {"grid": false,"labels": false, "ticks": false,"titleColor":"black"},
        "scale": {"type": "log", "domain": [100000, 150000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Export Value",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [3000000, 10000000, 20000000, 40000000, 100000000],
              "range": [100,200,400, 800,1600]
            },
            "legend": { "titleColor":"black", "labelColor":"black"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Eurpoe",
                "North America",
                "Asia",
                "Oceania"
              ],
              "range": [
                "blue",
                "green",
                "red",
                "#d79350"
              ]
            },
            "legend": { "titleColor":"black", "labelColor":"black"}
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Export Value", "type": "quantitative", "format": ","},
            {"field": "Import Value", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -13,
          "fontSize": 12
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' ||datum['Country'] == 'Japan' ||datum['Country'] == 'United States' ||datum['Country'] == 'Korea' ||datum['Country'] == 'United Kingdom' ",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Export Value", "type": "quantitative", "format": ","},
            {"field": "Import Value", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }